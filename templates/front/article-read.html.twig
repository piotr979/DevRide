{% extends 'front/base.html.twig' %}

{% block body %}
<div class="container">
<div class=" " id="nav-parent">
    <header class="wrapper header--dark justify-end backgrounds-styling">
       
        <nav class="top-nav">
            <div class="mb-5 peaks-mobile">
                <div class="bg-light"></div>
                <img class="peaks-footer" src="/../images/peaks-footer-with-background.svg" alt="">
                </div>
         
            <ul class="top-nav__list">
                <a href="#" class="top-nav__list-anchor">
                    <li class="dark-nav__list-item">Home</li>
                </a>
                <a href="#" class="top-nav__list-anchor">
                    <li class="dark-nav__list-item">PHP course</li>
                </a>
                <a href="#" class="top-nav__list-anchor">
                    <li class="dark-nav__list-item">Symfony</li>
                </a>
                <a href="#" class="top-nav__list-anchor">
                    <li class="dark-nav__list-item">Contact</li>
                </a>
                {% if is_granted("IS_AUTHENTICATED_FULLY") %}
                   <a href="{{ path('articles') }}" class="top-nav__list-anchor">
                    <li class="dark-nav__list-item admin-link">Go to admin</li>
                </a>
                {% endif %}
            </ul>
            
        </nav>
        <button class="btn-mobile-nav">
            <img class="open-mobile-nav icon-mobile-nav" src="/../images/nav/hamburger.svg" alt="Open mobile menu">
            <img class="close-mobile-nav icon-mobile-nav" src="/../images/nav/close_big.svg" alt="Close mobile menu">
        </button>
    </header> 
</div>
</div>

<input type="checkbox" class="navigator-checkbox" id="navigator-check">

<label for="navigator-check">
  
    <image class="open-emph" src="/../images/nav/navigator/plus_square.svg" id="open-sidebar" alt="open sidebar">
  
        <image src="/../images/nav/navigator/minus_square.svg" id="close-sidebar" alt="close sidebar">
      
</label>

<div id="navigator-sidebar" class="navigator-sidebar">
    
    <div class="sidebar-wrapper">
        <div class="logo" >
            <img class="logo-icon logo-icon--shining" src="/../images/nav/ring-ship.svg" alt="ship with ring icon">
            <img src="/../images/logo_for_dark.svg" alt="">
            </div>
       <p class="navigator-logo__subtext">Table of contents</p> 
        <div id="sidebar-chapters" class="sidebar-chapters"></div>
    </div>
</div>
<div class="navigator-text--container">
    <div class="navigator-sidebar--dummy">
    </div>
    <div class="navigator-text--content">
        <h2>{{ article.title }}</h2>
       {{ article.content|raw }}

    </div>
</div>
<div class="bg-light mt-4">
<img class="peaks-footer" src="images/peaks-footer.svg" alt="">
</div>
<div class="container bg-light ">
<footer class="wrapper articles-bottom">
  <div>
      <img class="footer--image__logo" src="images/logo.svg" alt="devRide logo">
      <a href=""><small>www.github.com/piotr979</small></a>
  </div>
  <div class="footer--middle">
      <p>devRide to strona poświęcona programowaniu.
           Zapraszam do subskrybowania, aby być na bieżąco z nowymi informacjami.</p>
  </div>
  <div class="">
      <img class="footer--image" src="images/general_icons/AR_6.svg" alt="">
  </div>
</section>
</div>
{% endblock %}